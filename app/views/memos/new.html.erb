<div class="room-page">
  <div class="room-inner">
    <div class= "room-title">
       <h2>新規メモの作成</h2>
    </div>
    <div class= "room-form">
      <%= form_with model: @room_memo, local: true do |f|%>
        <div class="room-field">
          <%= f.label :買ってきてほしいもの %>
          <%= f.text_field :item,class: "room-text", placeholder: "商品名などを入れてください" %>
        </div>
        <div class="room-field">
          <%= f.label :詳細 %>
          <%= f.text_field :info,class: "room-text", placeholder: "型番など詳細を入れてください" %>
        </div>
    </div>
      <div class= "action">
        <%= f.submit class: 'btn'%>
      </div>
      <% end %>
  </div>
</div>